<?xml version="1.0" encoding="utf-8"?>
<ivy-module version="2.0">
    <info organisation="cocaine" module="cocaine-framework-java">
        <description>Cocaine Framework Java</description>
    </info>

    <configurations>
        <conf name="compile"/>
        <conf name="runtime" extends="compile"/>
        <conf name="sources"/>
        <conf name="test"/>
        <conf name="test-integration"/>
